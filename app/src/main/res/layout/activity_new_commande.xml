<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewCommandeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <!-- Titre du formulaire -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créer une nouvelle pizza"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Nom de la pizza -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom de la pizza"
            app:boxBackgroundMode="outline"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:id="@+id/pizzaName"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Prix de la pizza -->
        <com.google.android.material.textfield.TextInputLayout
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prix de la pizza"
            app:boxBackgroundMode="outline"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:id="@+id/pizzaPrice"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Bouton de création -->
        <Button
            android:id="@+id/buttonCreatePizza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créer la pizza"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:elevation="0dp"/>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:elevation="0dp"
        app:itemIconSize="23dp"
        app:itemIconTint="@color/red"
        app:itemTextColor="@color/red"
        app:labelVisibilityMode="selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
